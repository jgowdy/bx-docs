# GitHub Organization Configuration
ORG_NAME=jgowdy
GITHUB_PAT=your_github_personal_access_token_here

# Runner Configuration
RUNNER_NAME=bx-ee-windows-runner-1
RUNNER_GROUP=default
LABELS=bx-ee,windows,docker,build

# Ephemeral mode (runner is removed after each job - recommended for security)
EPHEMERAL=true

# Auto-update
DISABLE_AUTO_UPDATE=false

# Resource Limits for Windows VM
# Windows typically needs more resources than Linux
CPU_LIMIT=2.0
MEMORY_LIMIT=4G
CPU_RESERVATION=1.0
MEMORY_RESERVATION=1G
