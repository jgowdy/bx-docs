# GitHub Organization Configuration
ORG_NAME=TeamEightStar
GITHUB_PAT=ghp_YOUR_TOKEN_HERE

# Runner Configuration
RUNNER_NAME=bx-ee-runner-1
RUNNER_GROUP=default
LABELS=bx-ee,docker,linux

# Ephemeral mode (runner is removed after each job - recommended for security)
# Set to true for production, false for persistent runner
EPHEMERAL=true

# Auto-update (set to true to disable auto-updates)
DISABLE_AUTO_UPDATE=false

# Resource Limits (adjust based on bx.ee capacity)
# These limits protect your production services from being starved
CPU_LIMIT=2.0
MEMORY_LIMIT=2G
CPU_RESERVATION=0.5
MEMORY_RESERVATION=512M
